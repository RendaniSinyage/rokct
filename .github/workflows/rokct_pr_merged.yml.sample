name: 'Update ROKCT Task on PR Merged'
on:
  pull_request:
    types: [closed]

jobs:
  update_rokct_task:
    if: github.event.pull_request.merged == true
    runs-on: ubuntu-latest
    steps:
      - name: 'Jules PR Closer'
        uses: ./../actions/jules-pr-closer-action # In a real-world scenario, this would be 'rokct/jules-pr-closer-action@v1'
        with:
          repo-token: ${{ secrets.GITHUB_TOKEN }}
          rokct-api-endpoint: 'https://YOUR_APP_URL/api/method/rokct.roadmap.api.update_task_status_from_pr'
          rokct-action-token: ${{ secrets.ROKCT_ACTION_TOKEN }}